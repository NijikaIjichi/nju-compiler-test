struct ClassRoom {
  int cid;
  struct Position {
    int bid;
    int rid;
  } position;

  struct Teacher {
    int tid;
    int tgender;
    int course;
  } teacher;

  struct Student {
    int sid;
    int sgender;
    float grade;
  } students[100];

} classRoom1, classRoom2, classRoom3;

float ave_grade(struct ClassRoom cr){
  float sum = 0.0;
  int index = 0;
  while(index < 100){
    sum = sum + cr.students[index].grade;
  }
  return sum / 100.0;
}

int main() {
  float ave1 = ave_grade(classRoom1);
  float ave2 = ave_grade(classRoom2);
  float ave3 = ave_grade(classRoom3);

  ave1(ave2, ave3);
}